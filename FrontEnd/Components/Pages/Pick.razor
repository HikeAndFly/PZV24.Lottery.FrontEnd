@page "/pick"
@using FrontEnd.Components.Pick

<h3>Pick</h3>

<LotteryPicker TotalButtons="50"
               MaxSelections="5"
               ButtonsPerGroup="8"
               OnSelectionChanged="HandleSelectionChanged"/>


<MudText Typo="Typo.h6" Class="mt-3">
    Your Selected Numbers: @string.Join(", ", SelectedLotteryNumbers)
</MudText>

<StarPicker TotalStars="12"
            MaxSelections="2"
            OnSelectionChanged="HandleStarSelectionChanged"/>

<MudText Typo="Typo.h6" Class="mt-3">
   Your Selected Stars: @string.Join(", ", SelectedStarNumbers)
</MudText>


@code {
   private List<int> SelectedLotteryNumbers = new();
   private List<int> SelectedStarNumbers = new();
   private string DrawResult = "";
   private string Common = "";

   private void HandleSelectionChanged(List<int> selectedNumbers)
   {
      SelectedLotteryNumbers = selectedNumbers;
   }

   private void HandleStarSelectionChanged(List<int> selectedStarNumbers)
   {
      SelectedStarNumbers = selectedStarNumbers;
   }
}
