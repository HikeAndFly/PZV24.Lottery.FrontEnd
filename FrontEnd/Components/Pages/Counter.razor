@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>
<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
<MudPaper Class="p-4 mb-4" Elevation="2">
    <MudText Typo="Typo.h4" Class="mb-4">Counter</MudText>

    <MudText Typo="Typo.body1" >Current count: @currentCount</MudText>

    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="IncrementCount">
        Click me
    </MudButton>
</MudPaper>
</MudContainer>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}